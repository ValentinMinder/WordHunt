<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.heigvd.wordhunt.design" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_laucher_wh_ic_material_product_icon_192px_copie"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.heigvd.wordhunt.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.heigvd.wordhunt.Interaction.PageSlider.ScreenSlidePagerActivity"
            android:label="@string/title_activity_screen_slide_pager"
            android:parentActivityName="ch.heigvd.wordhunt.activities.MainActivity" >
        </activity>
        <activity
            android:name="ch.heigvd.wordhunt.Interaction.CardFlip.CardFlipActivity"
            android:label="@string/title_activity_card_flip"
            android:parentActivityName="ch.heigvd.wordhunt.activities.MainActivity" >
        </activity>
        <activity
            android:name="ch.heigvd.wordhunt.activities.Game.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="ch.heigvd.wordhunt.activities.MainActivity" />
        <activity
            android:name="ch.heigvd.wordhunt.Interaction.AnimationActivity"
            android:label="@string/title_activity_animation" >
        </activity>
        <activity
            android:name="ch.heigvd.wordhunt.activities.Login.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="ch.heigvd.wordhunt.activities.MainActivity" />
        <activity
            android:name="ch.heigvd.wordhunt.activities.Login.CreateAccountActivity"
            android:label="@string/title_activity_create_account"
            android:parentActivityName="ch.heigvd.wordhunt.activities.MainActivity" />
        <activity
            android:name="ch.heigvd.wordhunt.activities.Admin.CreateCompetition"
            android:label="@string/title_activity_create_competition" >
        </activity>
    </application>

</manifest>
