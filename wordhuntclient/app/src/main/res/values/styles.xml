<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="text_dark_background">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="item_small_spacing">
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="button_normal" parent="item_small_spacing">
        <item name="android:background">@drawable/ripple_normal_button</item>
        <item name="android:layout_height">@dimen/button_normal_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@drawable/text_color</item>
    </style>

    <style name="button_outfill_button" parent="button_normal">
        <item name="android:textColor">@drawable/text_color_red</item>
        <item name="android:background">@drawable/ripple_red_button</item>
    </style>

    <style name="button_normal_accent" parent="button_normal">
        <item name="android:background">@drawable/ripple_accent_button</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="text_primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>


    <style name="text_big_number" parent="text_primary">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="text_big_number_label" parent="text_primary">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="game_result_textswitcher">
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:background">@drawable/backcurrenttext</item>
    </style>

    <style name="game_result_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="button_grid_game">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/nice_button_enabled</item>
        <item name="android:textColor">@drawable/text_color_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_rounded">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>
    <color name="text_light">#FFFFFF</color>


    <style name="TextAppearance.Wordhunt.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_clock">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_light</item>

    </style>

    <style name="text_title_section">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

    <style name="dark_edit_text">
        <item name="android:textColorHint">@color/secondary_dark</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:colorControlNormal">@color/accent</item>
    </style>


</resources>
