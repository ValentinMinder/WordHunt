<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:animateLayoutChanges="true"
        android:id="@+id/scoreContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
                android:animateLayoutChanges="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/score"
                        android:textSize="60sp"
                        android:fontFamily="roboto"
                        android:textColor="@color/text_primary"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:text="Points"
                        android:textColor="@color/text_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/bestScoreLayout"
                    android:layout_marginStart="50dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/bestScore"
                        android:textSize="60sp"
                        android:fontFamily="roboto"
                        android:textColor="@color/text_primary"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/bestScoreLabel"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"
                        android:text="@string/bestScoreLabel"
                        android:textColor="@color/text_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



            </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/textWinner"
            android:background="@color/WHITE"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_primary"
            android:textSize="30sp"
            android:text="You Win !"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/num_words"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/containerListSolution"
            android:padding="20dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonHome"
            style="@style/button_rounded"
            android:src="@drawable/ic_home_white_24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/buttonRestartGame"
            style="@style/button_rounded"
            android:layout_toStartOf="@+id/buttonHome"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_replay_white_24dp"/>

</RelativeLayout>